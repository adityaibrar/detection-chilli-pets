<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content Utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/teal_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- Konten utama aplikasi -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Fragment atau konten utama bisa dimasukkan di sini -->
        </FrameLayout>

    </LinearLayout>

    <!-- Left Drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDeteksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deteksi"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvHama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hama"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvAddHama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Hama"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvAddSolusi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Solusi"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>